generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  @@map("user")

  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  createdAt    DateTime  @default(now())
  verifiedAt   DateTime?
  email        String    @unique
  name         String
  passwordHash String
  sessions     Session[]
}

model Session {
  @@map("session")
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String   @db.ObjectId
  nonce     String
  expires   DateTime

  @@unique([userId, nonce])
}
